                    Label:
                        size_hint: (.9, None)
                        height: 30
                        bold: True

                RecycleView:
                    id: img_base
                    viewclass: 'ImgCard'
                    RecycleGridLayout:
                        default_size: (None, 250)
                        default_size_hint: (1, None)
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 10
                        cols: 4

#                BoxLayout:
