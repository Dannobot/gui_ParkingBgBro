<ImgCard@ToggleButtonBehavior+BoxLayout>:
    im_source: ''
    im_caption: ''
    orientation: 'vertical'
    on_release: app.root.view_img(self)
    Image:
        source: root.im_source
        size_hint_y: .9
    Label:
        text: root.im_caption
        size_hint_y: .1

<ViewImage>
    id: main_image
    orientation: 'vertical'

    BoxLayout:
        Slider:
            id: slider
            min: -50
            max: 50
            step: 1
            orientation: 'vertical'
        Label:
            text: str(slider.value)


<MainWindow>:
    id: main_win
    orientation: 'vertical'
#    size_hint_y: 1.085
#    file_dropdown: file_dropdown.__self__

    ScreenManager:
        id: scrn_mngr

        Screen:
            id: scrn_media
            name: 'scrn_media'

            BoxLayout:
                id: main_media
                orientation: 'vertical'

                BoxLayout:
                    id: top_nav
                    size_hint_y: None
                    height: 35

                    Button:
                        id: file_trigga
                        text: 'Open Folder'
                        size_hint: (.1, None)
                        height: 30
                        on_release: scrn_mngr.current = 'open_media'
#                        on_release: file_dropdown.open(self)

#                        Widget:
