#                    size_hint_y: .1

        Screen:
            id: open_media
            name: 'open_media'
            trigger: ''
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    size_hint_y: None
                    height: 35
                    TextInput:
                        id: current_path
                        text: chooser.path #chooser.selection[0] if open_media.trigger == 'image' and len(chooser.selection) > 0 else chooser.path
                        size_hint_x: .8
                    Button:
                        id: submit
                        text: 'Open'
                        size_hint_x: .2
                        on_release: root.get_image(current_path.text)
                FileChooserIconView:
                    id: chooser


